#pragma once

#include <filesystem>
#include <string>

namespace tt {

class Dirs {
public:
    [[nodiscard]] static auto GetInstance() -> Dirs &;
    Dirs(Dirs const &) = delete;
    void operator=(Dirs const &) = delete;

    [[nodiscard]] auto bindir() const -> const std::filesystem::path &;
    [[nodiscard]] auto confdir() const -> const std::filesystem::path &;
    [[nodiscard]] auto execline_prefix() const -> const std::filesystem::path &;
    [[nodiscard]] auto libexecdir() const -> const std::filesystem::path &;
    [[nodiscard]] auto livedir() const -> const std::filesystem::path &;
    [[nodiscard]] auto logdir() const -> const std::filesystem::path &;
    [[nodiscard]] auto servicedir() const -> const std::filesystem::path &;
    [[nodiscard]] auto statedir() const -> const std::filesystem::path &;

protected:
    Dirs() = default;

    void bindir(std::filesystem::path &&new_path);
    void confdir(std::filesystem::path &&new_path);
    void execline_prefix(std::filesystem::path &&new_path);
    void libexecdir(std::filesystem::path &&new_path);
    void livedir(std::filesystem::path &&new_path);
    void logdir(std::filesystem::path &&new_path);
    void servicedir(std::filesystem::path &&new_path);
    void statedir(std::filesystem::path &&new_path);

private:
    std::filesystem::path bindir_ = "@bindir@";
    std::filesystem::path confdir_ = "@confdir@";
    std::filesystem::path execline_prefix_ = "@execline_prefix@";
    std::filesystem::path libexecdir_ = "@libexecdir@";
    std::filesystem::path livedir_ = "@livedir@";
    std::filesystem::path logdir_ = "@logdir@";
    std::filesystem::path servicedir_ = "@servicedir@";
    std::filesystem::path statedir_ = "@statedir@";
};

} // namespace tt
