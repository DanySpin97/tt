#pragma once

#include <string>

namespace tt {

class Dirs {
public:
    static Dirs &GetInstance();
    Dirs(Dirs const &) = delete;
    void operator=(Dirs const &) = delete;

    const std::string &bindir();
    const std::string &confdir();
    const std::string &execline_prefix();
    const std::string &libexecdir();
    const std::string &livedir();
    const std::string &logdir();
    const std::string &servicedir();
    const std::string &systemdir();

    const std::string &custom_scriptsdir();
    const std::string &admin_servicedir();
    const std::string &admin_confdir();

private:
    Dirs() = default;

    std::string bin_ = "@bindir@";
    std::string conf_ = "@confdir@";
    std::string execline_prefix_ = "@execline_prefix@";
    std::string libexec_ = "@libexecdir@";
    std::string live_ = "@livedir@";
    std::string log_ = "@logdir@";
    std::string service_ = "@servicedir@";
    std::string system_ = "@systemdir@";

    std::string custom_scripts_ = "@confdir@";
    std::string admin_service_ = "@confdir@/service";
    std::string admin_conf_ = "@confdir@/conf";
};

} // namespace tt
