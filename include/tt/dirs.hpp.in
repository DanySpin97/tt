#pragma once

#include <string>

namespace tt {

class Dirs {
public:
    [[nodiscard]] static auto GetInstance() -> Dirs &;
    Dirs(Dirs const &) = delete;
    void operator=(Dirs const &) = delete;

    [[nodiscard]] auto bindir() const -> const std::string &;
    [[nodiscard]] auto confdir() const -> const std::string &;
    [[nodiscard]] auto execline_prefix() const -> const std::string &;
    [[nodiscard]] auto libexecdir() const -> const std::string &;
    [[nodiscard]] auto livedir() const -> const std::string &;
    [[nodiscard]] auto logdir() const -> const std::string &;
    [[nodiscard]] auto servicedir() const -> const std::string &;
    [[nodiscard]] auto statedir() const -> const std::string &;

private:
    Dirs();
    void InitUserDirs();

    std::string bindir_ = "@bindir@";
    std::string confdir_ = "@confdir@";
    std::string execline_prefix_ = "@execline_prefix@";
    std::string libexecdir_ = "@libexecdir@";
    std::string livedir_ = "@livedir@";
    std::string logdir_ = "@logdir@";
    std::string servicedir_ = "@servicedir@";
    std::string statedir_ = "@statedir@";
};

} // namespace tt
